{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Kilocode Parity Matrix Schema",
	"description": "Schema for tracking feature parity between VSCode extension and CLI",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"id": {
				"type": "string",
				"pattern": "^[a-z0-9_]+$",
				"description": "Unique identifier for this feature"
			},
			"category": {
				"type": "string",
				"enum": ["providers", "tools", "ui_ux", "configuration", "advanced"],
				"description": "Primary feature category"
			},
			"feature_name": {
				"type": "string",
				"description": "Human-readable feature name"
			},
			"description": {
				"type": "string",
				"description": "Detailed description of the feature"
			},
			"extension_ref": {
				"type": "string",
				"description": "Reference to extension implementation (file/function/class)"
			},
			"cli_ref": {
				"type": "string",
				"description": "Reference to CLI implementation (file/function/command)"
			},
			"status": {
				"type": "string",
				"enum": ["âœ…", "ğŸ”„", "âŒ", "ğŸš«", "ğŸ†•"],
				"description": "Parity status: âœ… Complete, ğŸ”„ Adapted, âŒ Missing, ğŸš« Incompatible, ğŸ†• CLI-only"
			},
			"adaptation_strategy": {
				"type": "string",
				"description": "How GUI features are adapted for CLI (if applicable)"
			},
			"dependencies": {
				"type": "array",
				"items": { "type": "string" },
				"description": "Other features this depends on"
			},
			"effort": {
				"type": "string",
				"enum": ["S", "M", "L", "XL"],
				"description": "Implementation effort: S(small), M(medium), L(large), XL(extra large)"
			},
			"priority": {
				"type": "string",
				"enum": ["P0", "P1", "P2", "P3"],
				"description": "Priority: P0(critical), P1(important), P2(nice), P3(future)"
			},
			"target_phase": {
				"type": "integer",
				"minimum": 1,
				"maximum": 4,
				"description": "Implementation phase (1-4)"
			},
			"acceptance_criteria": {
				"type": "string",
				"description": "How to verify this feature works correctly"
			},
			"notes": {
				"type": "string",
				"description": "Additional implementation notes or constraints"
			}
		},
		"required": ["id", "category", "feature_name", "status", "priority"]
	}
}
